<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_material_light"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:id="@+id/choose_subject">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/heading"
            android:background="@color/primarycolor"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="30dp"
            android:text="Choose the subject(s)"
            android:paddingTop="30dp"
            android:textColor="@android:color/white"
            android:clickable="false"
            android:textIsSelectable="false"
            android:textSize="@dimen/abc_text_size_large_material"
            android:gravity="center"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/select_all_subjects"
            android:layout_marginRight="10dp"
            android:src="@drawable/abc_btn_check_to_on_mtrl_015"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>




    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/choose_subject"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"

        android:id="@+id/listView1"
        android:clickable="false"
        android:background="@color/button_material_light"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:layout_gravity="center|center_horizontal"
        android:listSelector="@android:color/transparent"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_proceed"
        android:layout_alignParentBottom="true"
        android:text="Proceed"
        android:background="#F26463"
        android:textSize="@dimen/abc_text_size_small_material"
        android:padding="20dp"
        android:layout_margin="10dp"
        android:onClick="onClickDo"
        />


</RelativeLayout><!-- From: file:/C:/Users/pranav%20vij/Documents/notufy/notufy/app/src/main/res/layout/activity_subject_select.xml -->